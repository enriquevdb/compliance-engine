{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug API Server",
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node",
        "args": ["api/server.ts"],
        "console": "integratedTerminal",
        "skipFiles": ["<node_internals>/**"],
        "sourceMaps": true,
        "env": {
          "NODE_ENV": "development"
        },
        "resolveSourceMapLocations": [
          "${workspaceFolder}/**",
          "!**/node_modules/**"
        ]
      }
    ]
  }